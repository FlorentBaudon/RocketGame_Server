{
  "compilerOptions": {
    "lib": [
      "es2021"
    ],
    "module": "node16",
    "target": "es2021",
    "moduleResolution": "node16",
    "resolveJsonModule": true,

    "outDir": "dist",

    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "esModuleInterop": true,
    
    "strict": true,
    // "noImplicitReturns": false,
    // "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "assets": [
    "src/template/config.yaml"
  ]
}